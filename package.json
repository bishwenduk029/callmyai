    "release": "turbo build --filter=docs^... && changeset publish"
  },
  "devDependencies": {
    "@bishwenduk029/eslint-config": "workspace:*",
    "@changesets/cli": "^2.27.1",
    "eslint": "^9.2.0",
    "prettier": "^3.2.5",
    "turbo": "^1.13.3"
  },
  "packageManager": "pnpm@9.1.2",
  "engines": {
    "node": ">=18"
  }
}
